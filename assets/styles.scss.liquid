// GLOBAL
* {
  font-size: 16px;
}

.visually-hidden {
  display: none !important;
}


// HEADER
.site-header__logo-wrapper {
}

.site-header__desktop-nav {
  .level-1,
  .level-2,
  .level-3 {
    list-style: none;
    margin: 0;
    padding: 0;
    li {
      line-height: 3rem;
      position: relative;
      a {
        line-height: 1;
      }
    }
  }

  .level-1,
  .level-2 {
    > li {
      display: inline-block; 
    }
  }

  .level-2 {
    align-items: stretch;
    background-color: #F2F2F2;
    display: flex;
    justify-content: space-evenly;
    left: 0;
    position: fixed;
    top: 3rem;
    width: 100vw;
    > li {
      > a {
        border-bottom: 1px solid;
      }
    }
  }
}

